#!/bin/bash

MAIN="$(realpath gtd)"

GREEN='\033[0;32m'
RED='\033[0;31m'
RESET_COLOR='\033[0m'

pass_cnt=0
fail_cnt=0

assert() {
   if [ "${@:2}" ]; then
      pass_cnt="$(( pass_cnt + 1 ))"
      echo -ne "${GREEN}.${RESET_COLOR}"
   else
      fail_cnt="$(( fail_cnt + 1 ))"
      echo -ne "${RED}âœ—${RESET_COLOR}"
      errors="$errors\n$*\n"
   fi
}

echo -e "Running tests...\n"

if [[ -e ~/.gtdrc ]]; then
   mv ~/.gtdrc /tmp/old_gtdrc
fi

for file in "$(dirname $MAIN)/tests/"*.test; do
   DEBUG=true f="$(basename $file) =>" source "$file"
done

if [[ -e /tmp/old_gtdrc || -h /tmp/old_gtdrc ]]; then
   mv /tmp/old_gtdrc ~/.gtdrc
fi

echo -e "\n${RED}${errors}${RESET_COLOR}"
echo -e "Done. $pass_cnt passed. $fail_cnt failed."
